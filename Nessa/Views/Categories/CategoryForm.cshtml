@model Nessa.Models.Category

@{
    ViewBag.Title = "CategoryForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Name)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(c => c.ImagePath)
        <input class="form-control" type="file" id="Photo" name="image" />
    </div>

    @Html.HiddenFor(c => c.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Запази</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}